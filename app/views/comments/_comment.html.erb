<p>
  <strong>Title:</strong>
  <%= comment.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= comment.body %>
</p>
<div class="date"> <%= time_ago_in_words(comment.created_at) %></div>

<p>
	<% if user_signed_in? %>
	<%= link_to "Delete", [comment.post, comment], 
	method: :delete, 
	class: "post-link post-link_delete",
	data: {confirm: "Are you sure?"} %>	
	 <% end %> 	
</p>